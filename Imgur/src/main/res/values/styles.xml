<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ImgurActionBar</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <!-- Refresh Header -->
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>

    <style name="ImgurActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actiobbar</item>
    </style>

    <!-- Refresh Header -->
    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrProgressBarColor">@color/imgur_green</item>
    </style>
</resources>
